<refnamediv>
	<refname>&p;</refname>
	<refpurpose>LaTeX equations to ASCII/UTF-8 translator</refpurpose>
</refnamediv>

<refsynopsisdiv>
	<cmdsynopsis>
		<command>&p;</command>
		<arg choice='opt'><option>--debug</option></arg>
		<group choice='opt'>
			<arg choice='plain'><option>--html</option></arg>
			<arg choice='plain'><option>--ascii</option></arg>
			<arg choice='plain'><option>--utf8</option></arg>
		</group>
		<arg choice='plain' rep='repeat'><replaceable>expression</replaceable></arg>
	</cmdsynopsis>
	<cmdsynopsis>
		<command>&p;</command>
		<group choice='req'>
			<arg choice='plain'><option>--version</option></arg>
			<arg choice='plain'><option>-v</option></arg>
			<arg choice='plain'><option>--help</option></arg>
			<arg choice='plain'><option>-h</option></arg>
		</group>
	</cmdsynopsis>
</refsynopsisdiv>

<refsect1>
	<title>Options</title>
	<para>
		<command>&p;</command> accepts the following options:
	</para>

	<variablelist>
		<varlistentry>
			<term><option>--debug</option></term>
			<listitem>
				<para>Turn on debug output.</para>
			</listitem>
		</varlistentry>
		<varlistentry>
			<term><option>--html</option></term>
			<listitem>
				<para>Use HTML output format. This is default in this version.</para>
			</listitem>
		</varlistentry>
		<varlistentry>
			<term><option>--ascii</option></term>
			<listitem>
				<para>Use text output format with US-ASCII charset.</para>
			</listitem>
		</varlistentry>
		<varlistentry>
			<term><option>--utf8</option></term>
			<listitem>
				<para>Use text output format with UTF-8 charset.</para>
			</listitem>
		</varlistentry>
		<varlistentry>
			<term><option>-h</option></term>
			<term><option>--help</option></term>
			<term><option>-v</option></term>
			<term><option>--version</option></term>
			<listitem>
          		<para>Output version information and exit.</para>
			</listitem>
		</varlistentry>
	</variablelist>
</refsect1>

